{
	"name": "brilliant",
	"displayName": "Bri11iant",
	"description": "A Scaffolding Tool for A11Y Web Development",
	"version": "0.0.1",
	"publisher": "Northwestern University Inclusive Technology Lab",
	"license": "MIT",
	"repository": "https://github.com/InclusiveTechNU/bri11iant",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Linters"
	],
	"keywords": [
		"a11y",
		"accessibility",
		"language-extension"
	],
	"activationEvents": [
		"onLanguage:html",
		"onLanguage:javascriptreact",
		"onLanguage:vue-html",
		"onLanguage:vue"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Bri11iant",
			"properties": {
				"bri11iant.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"bri11iant.semanticExclude": {
					"scope": "resource",
					"type": "boolean",
					"default": false,
					"description": "Controls if non-semantic HTML is going to produce problems by the server."
				},
				"bri11iant.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"capabilities": {
		"codeActionProvider": "true"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -b -w"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"path": "0.12.7",
		"typescript": "^3.6.4"
	}
}
